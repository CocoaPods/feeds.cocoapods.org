  def watchers(pod)
    Pod::Specification::Set::Statistics.instance.github_watchers(pod.set)
  end

  def has_screenshot(pod)
    !pod.spec.screenshots.compact.empty?
  end

  def box_class(pod)
    if has_screenshot(pod)
      { :class => "card double_height" }
    else
      { :class => "card" }
    end
  end

.col-sm-4.col-xs-6.dev-team
